<div class="container" style="padding-top:60px">
  <div class="row">
    <div class="col-md-12">
      <h2>Categories</h2>
      <hr />
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Category ID</th>
            <th scope="col">Category Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each categories}}
          <tr>
              <td><a href="/posts?category={{id}}">{{id}}</a></td>
              <td><a href="/posts?category={{id}}">{{category}}</a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    </div>
  </div>